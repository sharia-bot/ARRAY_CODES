class Solution {
public:
    vector<string> summaryRanges(vector<int>& nums) {
          int n = nums.size();

          vector<string>result;
           string curr = "";
          for(int i=0;i<n;i++){
              if(curr.empty()){
                 curr+= to_string(nums[i]);
              }

              if(i+1 < n && nums[i] + 1 == nums[i+1]){
                 continue;
              }else{
                   if(curr == to_string(nums[i])){
                    result.push_back(curr);
                   } 
                   else{
                     curr+= "->" + to_string(nums[i]);
                     result.push_back(curr);
                   }
                  curr = "";  
              }
          }
    //result.push_back(curr);
    return result;          
    }
};
