class Solution {
public:
    int majorityElement(vector<int>& nums) {
        if(nums.size() == 1) return nums[0];
        
        sort(begin(nums),end(nums));
        int n = nums.size();
        int half_n = n/2;
        
        int count = 1;

        for(int i=0;i<n-1;i++){
            if(nums[i] == nums[i+1]){
                count++;
                if(count>half_n)
                   return nums[i];
            }
            else
             count = 1;
        }

       
      
    return 0;    
        
    }
};
