class Solution {
public:
    int pivotIndex(vector<int>& nums) {
        int n  = nums.size();

        vector<int>preSum(n);
        vector<int>suffSum(n);

        preSum[0] = nums[0];
        for(int i=1;i<n;i++){
            preSum[i] = nums[i] + preSum[i-1];
        }
        suffSum[n-1] = nums[n-1];

        for(int i=n-2;i>=0;i--){
            suffSum[i] = nums[i] + suffSum[i+1];
        }


        // now calculate the pivot index 
        // where presum == suffsum
        for(int i=0;i<n;i++){
            if(preSum[i] == suffSum[i])
                 return i;
        }
    return -1;    
    }
};
